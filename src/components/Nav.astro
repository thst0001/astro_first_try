 <header class="spotify-header">
    <div class="logo">
      <img src="logo.png" alt="Spotify Logo">
    </div>
    <div class="search-bar">
      <input type="text" placeholder="Search">
    </div>
    <nav class="nav-icons">
      <a href="#">Home</a>
      <a href="#">Library</a>
      <a href="#">Profile</a>
    </nav>
  </header>
  
  <style>
    .spotify-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #1DB954;
  padding: 10px 20px;
  color: white;
}

.logo img {
  width: 60px;
}

.search-bar input {
  padding: 8px;
  border-radius: 20px;
  border: none;
  width: 300px;
}

.nav-icons a {
  margin-left: 20px;
  color: rgb(6, 6, 6);
  text-decoration: none;
  font-weight: bold;
}

.nav-icons a:hover {
   
  color: white;
}
  </style>